//CSS
.container{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  min-height:100vh;
}

#question{
  display:flex;
  align-items:center;
  justify-content:space-between;
  width:300px;
  background:lightblue;
  padding:0px 8px;
  margin:10px 0;
}

#question img{
  cursor:pointer;
}

#answer{
  width:300px;
  text-align:justify;
}

.no-display{
  display:none;
}

//JAVASCRIPT
var nodeList = document.querySelectorAll("#card");
var cardArray = Array.prototype.slice.call(nodeList);

function clickHandler(event){
cardArray.forEach((card)=>{
if(card===event.target.parentNode.parentNode){
 card.childNodes[2].nextElementSibling.classList.toggle("no-display");
 }else{
  card.childNodes[2].nextElementSibling.classList.add("no-display");
 }
})
}
